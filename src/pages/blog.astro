---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/molecules/Card.astro';
const allPosts = await Astro.glob('../pages/posts/*.md')
import PostsLayout from '../layouts/PostsLayout.astro';

---

<BaseLayout title="Devblog | Todos los posts" mainClass='' footerClass=''>
	<PostsLayout>
		{allPosts.map((post) => (
			<Card title={post.frontmatter.title} link={post.url} image={post.frontmatter.image} titleSize="text-2xl"/>
		))}
	</PostsLayout>
	
</BaseLayout>
