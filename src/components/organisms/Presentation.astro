---
interface Props {
  image:string
  title:string
  subtitle:string
  description:string
}
const {image,title,subtitle,description} = Astro.props as Props
---

<div class="flex flex-col justify-between items-center mx-auto gap-4 p-4">
  <div class="flex flex-col sm:flex-row justify-start items-center gap-4">
    <div class="sm:w-60 rounded-full">
      <img class="rounded-full" src={image} alt="author image">
    </div>
    <div>
      <h1 class=" font-semibold text-xl sm:text-2xl dark:text-white">{title}</h1>
      <h2 class="text-lg pt-2 dark:text-slate-50">{subtitle}</h2>
    </div>
  </div>
  <p class="dark:text-slate-200 lg:w-2/3">{description}</p>
</div>